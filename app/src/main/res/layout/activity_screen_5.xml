<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mainUser"
            type="com.candlestickschart.wayanadboothpresident.User" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Screen_5">
        <include layout="@layout/header"
            android:id="@+id/top"
            bind:username="@{mainUser}"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/villName"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/localgroup"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130sp"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="vertical">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/localgrouptext"
                android:textColor="@color/black"
                android:gravity="top"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:id="@+id/editText"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginLeft="20sp"
                android:id="@+id/backward"
                android:visibility="gone"
                android:layout_marginTop="20sp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60sp"
                android:textAllCaps="false"
                android:text="Save"
                android:background="@drawable/newsample"
                android:textColor="#FFFFFF"
                android:id="@+id/forward"
                android:layout_centerInParent="true"
                android:layout_marginTop="20sp"/>

        </RelativeLayout>
    </LinearLayout>
</layout>